.tooltip {
  background: #1496bb
  color: #fff
  pointer-events: none
  position: absolute
  top: 50%
  left: 50%
  box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28)
  font-family: 'Nanum Pen Script', cursive
  font-size: 24px
  padding: 4px 7px
  border-radius: 4px
  opacity: 0
  margin-top: -63px
  transform: translate(-50%)
  transition: all 0.5s

  &.show {
    opacity: 1
  }
}

.tooltip:after {
  border-left: solid transparent 10px
  border-right: solid transparent 10px
  border-top: solid #1496bb 10px
  bottom: -10px
  margin-left: -10px
  content: ""
  height: 0
  left: 50%
  position: absolute
  width: 0
}

.link {
  border-radius: 4px
  cursor: pointer
  padding: 1px
  transition: opacity 0.4s

  &:hover {
    opacity: .6
  }
}

.nodes text {
  text-shadow: 0 0 2px gray
  cursor: pointer
  text-anchor: middle
  fill: white
  font-family: 'Nanum Pen Script', cursive
}

.username {
  cursor: pointer
  list-style-type: none
}

body {
  background-image: linear-gradient(90deg,#6B6BAA 0,#292941)
  margin: 0
  padding: 0
  position: relative
  font-family: Arial, Helvetica, sans-serif
  font-size: 16px
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.main {
  box-shadow: 0 1px 8px 0 rgba(0,0,0,.2)
  padding: 0 30px
  box-sizing: border-box
  width: 1100px
  height: 544px
  background-color: white
  position: relative
}

.about {
  position: absolute
  background-color: transparent
  display: inline-block
  margin: 0
  padding-top: 30px
  line-height: 1.4
  width: 410px
  text-align: justify

  p {
    margin: 0 0 20px 0
  }
}

a {
  color: inherit

  &:hover {
    text-decoration: none
  }
}

.socials {
  position: absolute
  right: 50px
  bottom: 30px
  list-style-type: none
  margin: 0

  li {
    margin-top: 10px
  }
}

.so {
  animation: soAnimation 1s linear infinite
}

@keyframes soAnimation {
  0%, 100% {
    background-color: rgb(219,219,141)
  }
  50% {
    background-color: rgba(219,219,141,.2)
  }
}

.medium {
  animation: mediumAnimation 1s linear infinite
}

@keyframes mediumAnimation {
  0%, 100% {
    background-color: rgb(158, 218, 229)
  }
  50% {
    background-color: rgba(158, 218, 229,.2)
  }
}